<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="#008a63"
         >
         
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#008a63"
>

<LinearLayout
	android:id="@+id/row0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/top_logo_repeat"
	android:gravity="center">
	<ImageView
		android:id="@+id/logo"
		android:src="@drawable/logo"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:antialias="true"/>
</LinearLayout>
<LinearLayout
	android:id="@+id/row_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_margin="15dp"
	android:layout_below="@+id/row0"
	android:orientation="vertical"
	android:background="#008a63">
	
	<Button
	   android:id="@+id/btnDomanda"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:gravity="center"
	   android:text="Scarica domanda di immatricolazione"
	   android:onClick="domandaImmatricolazione"
	   android:clickable="true"
	 />
	
</LinearLayout>

<LinearLayout
	android:id="@+id/rowAD"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_below="@+id/row_button">
</LinearLayout>

<LinearLayout
	android:id="@+id/row1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/rowAD"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/anagrafica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Anagrafica"
            style="@style/blackSmall"
             />
</LinearLayout>

<LinearLayout
	android:id="@+id/row1_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row1"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row1_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/residenza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Residenza"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row2_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row2"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row2_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/domicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="left"
            android:text="Domicilio"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row3_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row3"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row4"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row3_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/carriera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Carriera Universitaria"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row4_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_marginBottom="15dp"
	android:layout_below="@+id/row4"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

</RelativeLayout>
</ScrollView>