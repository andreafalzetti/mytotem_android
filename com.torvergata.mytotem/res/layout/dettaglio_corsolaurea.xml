<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="#008a63"
         >
         
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#008a63"
>

<LinearLayout
	android:id="@+id/row0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/top_logo_repeat"
	android:gravity="center">
	<ImageView
		android:id="@+id/logo"
		android:src="@drawable/logo"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:antialias="true"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/rowAD"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row0">

</LinearLayout>


<LinearLayout
	android:id="@+id/row0_1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="5dp"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/rowAD"
	android:clickable="false"
	>
	        <TextView
        	android:id="@+id/nomeCorso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nome del corso di Laurea Potrebbe essere Lungo"
            style="@style/titoloNice"
             />
</LinearLayout>


<LinearLayout
	android:id="@+id/row1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="5dp"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row0_1"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Descrizione"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row1_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row1"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row1_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/obiettivi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Obiettivi"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row2_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row2"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row2_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/prospettive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="left"
            android:text="Prospettive"
            style="@style/blackSmall"
             />
</LinearLayout>
<LinearLayout
	android:id="@+id/row3_hidden"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row3"
	android:orientation="vertical"
	android:background="#008a63">
</LinearLayout>

<LinearLayout
	android:id="@+id/row4"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginRight="15dp"
	android:layout_marginLeft="15dp"
	android:layout_below="@+id/row3_hidden"
	android:onClick="clickHandler"
	android:clickable="true"
	android:background="@drawable/rettangolo">
	        <TextView
        	android:id="@+id/sitoweb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Sito Web"
            style="@style/blackSmall"
             />
</LinearLayout>

</RelativeLayout>
</ScrollView>