<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="#008a63"
         >
         
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#008a63"
>

<LinearLayout
	android:id="@+id/row0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/top_logo_repeat"
	android:gravity="center">
	<ImageView
		android:id="@+id/logo"
		android:src="@drawable/logo"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:antialias="true"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/rowAD"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_below="@+id/row0">

</LinearLayout>

<LinearLayout
	android:id="@+id/row1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/rowAD"
	android:background="#008a63"
	android:orientation="vertical">
       <TextView
        	android:id="@+id/nomeSegreteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            style="@style/titoloNice" />
</LinearLayout>

<LinearLayout
	android:id="@+id/row2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_margin="15dp"
	android:layout_below="@+id/row1"
	android:orientation="vertical"
	android:background="#008a63">
        <TextView
        	android:id="@+id/orario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="false"
            android:gravity="left"
            style="@style/whiteSmall" />
        <TextView
        	android:id="@+id/tel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:background="@drawable/rettangolo" />  
        <TextView
        	android:id="@+id/tel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:background="@drawable/rettangolo" />  
        <TextView
        	android:id="@+id/tel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:background="@drawable/rettangolo" />  
        <TextView
        	android:id="@+id/tel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:background="@drawable/rettangolo" />  
        <TextView
        	android:id="@+id/fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="false"
            android:gravity="left"
            style="@style/whiteSmall" />  
        <TextView
        	android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:background="@drawable/rettangolo" />  
        <TextView
        	android:id="@+id/responsabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="false"
            android:gravity="left"
            style="@style/whiteSmall" />
        <TextView
        	android:id="@+id/indirizzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="false"
            android:gravity="left"
            style="@style/whiteSmall" /> 
        <TextView
        	android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:gravity="left"
            style="@style/blackSmall"
            android:onClick="myClickHandler"
            android:text="Vai con Google Maps"
            android:background="@drawable/rettangolo" />          
</LinearLayout>
</RelativeLayout>
</ScrollView>