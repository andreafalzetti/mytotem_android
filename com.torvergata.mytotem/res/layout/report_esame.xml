<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#008a63"
>

<LinearLayout
	android:id="@+id/row0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/top_logo_repeat"
	android:gravity="center">
	<ImageView
		android:id="@+id/logo"
		android:src="@drawable/logo"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:antialias="true"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/row1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row0"
	android:background="#008a63">
        <TextView
        	android:id="@+id/nomeEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="Nome esame"
            style="@style/titolo" />
</LinearLayout>

<LinearLayout
	android:id="@+id/row2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="right"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row1"
	android:background="#008a63">
        <TextView
        	android:id="@+id/votoEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:gravity="right"
            android:text="x/30"
            style="@style/votoStr" />
</LinearLayout>

<LinearLayout
	android:id="@+id/row3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row2"
	android:orientation="vertical"
	android:background="#008a63">
        <TextView
        	android:id="@+id/dataEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:gravity="left"
            android:text="gg/mm/aaaa"
            style="@style/whiteMed" />
        <TextView
        	android:id="@+id/aaEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:gravity="left"
            android:text="A.A"
            style="@style/whiteMed" />  
        <TextView
        	android:id="@+id/ssdEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:gravity="left"
            android:text="SSD"
            style="@style/whiteMed" /> 
        <TextView
        	android:id="@+id/cfuEsame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:gravity="left"
            android:text="N.CFU"
            style="@style/whiteMed" />  
</LinearLayout>

</RelativeLayout>