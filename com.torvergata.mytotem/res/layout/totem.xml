<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#008a63"
>

<LinearLayout
	android:id="@+id/row0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/top_logo_repeat"
	android:gravity="center">
	<ImageView
		android:id="@+id/logo"
		android:src="@drawable/logo"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:antialias="true"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/row1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row0">
	<TextView
		android:text="Dati personali"
		android:layout_marginLeft="5dip"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="#FFFFFF"
		android:id="@+id/titolo1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/row2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row1">
	<TextView
		android:id="@+id/infoapp"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dp"
    	/>
</LinearLayout>

<LinearLayout
	android:id="@+id/row3"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row2">
	<TextView
		android:text="Esami"
		android:layout_marginLeft="5dip"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="#FFFFFF"
		android:id="@+id/titolo2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
</LinearLayout>

<LinearLayout
	android:id="@+id/row4"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_marginTop="10dp"
	android:layout_below="@+id/row3">
	<TextView
		android:id="@+id/presentazione"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dp"
    	/>
</LinearLayout>
	
</RelativeLayout>